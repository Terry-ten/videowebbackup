<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zr.mapper.UserRoleMapper">

    <select id="selectAllUserRole" resultType="com.zr.pojo.UserRole">
        SELECT * FROM user_role
        <where>
            <if test="username != null and username != ''">
                username = #{username}
            </if>
            <if test="userid != null">
                AND userid = #{userid}
            </if>
        </where>
    </select>
</mapper>
